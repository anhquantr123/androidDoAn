<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.create_new_account">

    <View
        android:id="@+id/background_login_nen"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/ic_background_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view5" />

    <View
        android:id="@+id/view5"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@color/color_login"
        app:layout_constraintStart_toStartOf="@+id/background_login_nen"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_safe" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Liên hệ hỗ trợ 0928 314 750."
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_create_account_email_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/background_login_nen" />

    <EditText
        android:id="@+id/txt_input_email_create_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@drawable/btn_round_blue"
        android:ems="10"
        android:hint="Email address"
        android:inputType="textEmailAddress"
        android:padding="9dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/txt_create_account_email_textview"
        app:layout_constraintStart_toStartOf="@+id/txt_create_account_email_textview"
        app:layout_constraintTop_toBottomOf="@+id/txt_create_account_email_textview" />

    <TextView
        android:id="@+id/txt_create_account_pass_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/txt_input_email_create_account"
        app:layout_constraintStart_toStartOf="@+id/txt_input_email_create_account"
        app:layout_constraintTop_toBottomOf="@+id/txt_input_email_create_account" />

    <EditText
        android:id="@+id/txt_input_pass_create_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@drawable/btn_round_blue"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="9dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_create_account_pass_textview"
        app:layout_constraintStart_toStartOf="@+id/txt_create_account_pass_textview"
        app:layout_constraintTop_toBottomOf="@+id/txt_create_account_pass_textview" />

    <TextView
        android:id="@+id/txt_create_account_nhaplaipass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/txt_input_pass_create_account"
        app:layout_constraintStart_toStartOf="@+id/txt_input_pass_create_account"
        app:layout_constraintTop_toBottomOf="@+id/txt_input_pass_create_account" />

    <EditText
        android:id="@+id/txt_input_confrim_pass_create_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@drawable/btn_round_blue"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="9dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_create_account_nhaplaipass"
        app:layout_constraintStart_toStartOf="@+id/txt_create_account_nhaplaipass"
        app:layout_constraintTop_toBottomOf="@+id/txt_create_account_nhaplaipass" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_input_confrim_pass_create_account"
        app:layout_constraintStart_toStartOf="@+id/txt_input_confrim_pass_create_account"
        app:layout_constraintTop_toBottomOf="@+id/txt_input_confrim_pass_create_account">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_login">

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:background="@color/color_login"
                android:text="Tạo Tài Khoản"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_login_create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Đã có tài khoản. Đăng Nhập!"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

</androidx.constraintlayout.widget.ConstraintLayout>